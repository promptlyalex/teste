definition
	OBSERVATION[at0000] matches {    -- MARS-5
		data matches {
			HISTORY[at0001] matches {    -- Event Series
				events cardinality matches {1..*; unordered} matches {
					POINT_EVENT[at0002] occurrences matches {0..1} matches {    -- Point in Time
						data matches {
							ITEM_TREE[at0003] matches {    -- Tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0009] matches {    -- I forget to take them
										value matches {
											1|[local::at0006],
											2|[local::at0007],
											3|[local::at0008],
											4|[local::at0028],
											5|[local::at0029]
										}
									}
									ELEMENT[at0012] matches {    -- I alter the dose
										value matches {
											1|[local::at0006],
											2|[local::at0007],
											3|[local::at0008],
											4|[local::at0030],
											5|[local::at0031]
										}
									}
									ELEMENT[at0014] matches {    -- I decide to miss out a dose
										value matches {
											1|[local::at0006],
											2|[local::at0007],
											3|[local::at0008],
											4|[local::at0034],
											5|[local::at0035]
										}
									}
									ELEMENT[at0013] matches {    -- I stop taking them for a while
										value matches {
											1|[local::at0006],
											2|[local::at0007],
											3|[local::at0008],
											4|[local::at0032],
											5|[local::at0033]
										}
									}
									ELEMENT[at0015] matches {    -- I take less than instructed
										value matches {
											1|[local::at0006],
											2|[local::at0007],
											3|[local::at0008],
											4|[local::at0036],
											5|[local::at0037]
										}
									}
									ELEMENT[at0011] occurrences matches {0..1} matches {    -- MARS-5 Score
										value matches {
											DV_COUNT matches {
												magnitude matches {|5..25|}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
	}

